<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login.FPassword"
             BackgroundColor="White"
             Title="Recuperar contraseña">
    
    <ContentPage.Content>
        <StackLayout>
            <StackLayout BackgroundColor="DarkCyan" Margin="10" Opacity="0.5">
                <Label Text="Ingresa tu correo electronico" TextColor="White"/>
                <Entry/>
                <Label Text="Ingresa tu nueva contraseña" TextColor="White"/>
                <Entry IsPassword="True"/>
                <Label Text="Ingresa nuevamente tu nueva contraseña" TextColor="White"/>
                <Entry IsPassword="True"/>
            </StackLayout>
            <Button Text="Confirmar cambios" Margin="50, 0, 50, 0" BackgroundColor="DarkCyan"/>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>